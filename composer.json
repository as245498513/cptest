{
  "name": "meckel-packages/query-helpers",
  "type": "library",
  "description": "Laravel Orm Query Helper",
  "authors": [
    {
      "name": "meckel",
      "email": "meckel@163.com"
    }
  ],
  "minimum-stability": "dev",
  "require": {
    "php": "^7.2",
    "laravel/lumen-framework": "^7.0|^8.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "~2",
    "phpunit/phpunit": "^8.5"
  },
  "autoload": {
    "psr-4": {
      "Bloom\\": "src",
      "files": [
        "src/QueryHelper.php"
      ]
    }
  },
  "scripts": {
    "test": "./vendor/bin/phpunit;",
    "phpcs": "./vendor/bin/php-cs-fixer fix -v --diff --dry-run;",
    "phpcs-fix": "./vendor/bin/php-cs-fixer fix -v;"
  }
}
